.card-style {
  border-radius: 16px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  background-color: #ffffff;
  padding: 16px;
  box-sizing: border-box;
}

.card-title {
  font-size: 1.1rem;
  font-weight: bold;
  color: #333333;
  margin-bottom: 0.5rem;
}

.card-metric {
  font-size: 2rem;
  font-weight: bold;
  color: #1c1c1c;
  margin-bottom: 1rem;
}

.card-submetric {
  font-size: 0.95rem;
  color: #6a6a6a;
}

.card-section {
  margin-top: 0.5rem;
}